# Block user from viewing list of files in a directory
Options -Indexes
IndexIgnore *

# Stop users from viewing this folder/files
<Files /logs/>
    order allow,deny
    deny from all
</Files>

# Stop users from viewing thsese development file
<Files .gitattributes>
    order allow,deny
    deny from all
</Files>

<Files .gitignore>
    order allow,deny
    deny from all
</Files>

<Files .htaccess>
    order allow,deny
    deny from all
</Files>

<Files README.md>
    order allow,deny
    deny from all
</Files>

<Files robots.txt>
    order allow,deny
    deny from all
</Files>

DirectoryIndex index.php index.html

# Add caching for API responses
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 seconds"
  ExpiresByType application/json "access plus 2678400 seconds"
  ExpiresByType text/plain "access plus 2678400 seconds"
</IfModule>

RewriteEngine On

# All API requests are routed via one PHP router file
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^v([0-9]+)/(.+)/$ /index.php/$2

# Force trailing slash
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^v([0-9]+)/(.+)$ /v$1/$2/ [R=301,L]

# Catch if no object requested
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^v([0-9]*)/$ /index.php/$2

# Catch if no object requested and no trailing slash, so redirect & force trailing slash
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^v([0-9]*)$ /v$1/ [R=301,L]

# Catch if no version provided & object provided
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^v([0-9]*)/(.*)/$ /index.php/$2

# Catch if no version provided & object provided and no trailing slash
# Redirect to include slash so force it
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^v([0-9]*)/(.*)$ /v$1/$2/ [R=301,L]
